#!/bin/sh -f

if [ $# -lt 2 ]; then
	echo 1>&2 Usage: $0 [-pbe|pw91] targetdir atom1 ...
	exit 127
fi

case $1 in
    -lda)   shift; potdir="potpaw.LDA.52";targetdir=$1; shift  ;;
    -*) echo 1>&2 Usage: $0 [-pbe|pw91|lda] targetdir atom1; exit 1 ;;
    *) potdir="potpaw.PBE.52";targetdir=$1; shift ;;
    esac

cat /global/apps/VASP/libs/${potdir}/${1}/POTCAR >  ${targetdir}/POTCAR
shift

while [ $# -ge 1 ]; do
    cat /global/apps/VASP/libs/${potdir}/${1}/POTCAR >>  ${targetdir}/POTCAR
    shift
done

exit 0
